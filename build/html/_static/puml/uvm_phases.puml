@startuml
skinparam ActivityBackgroundColor LightYellow
skinparam ActivityBorderColor Black

partition "Build & Connect (Functions)" {
  (*) --> "build_phase"
  "build_phase" --> "connect_phase"
  "connect_phase" --> "end_of_elaboration_phase"
  "end_of_elaboration_phase" --> "start_of_simulation_phase"
}

partition "Simulation (Tasks)" {
  "start_of_simulation_phase" --> "run_phase"
  note right: Consumes Simulation Time
}

partition "Cleanup & Report (Functions)" {
  "run_phase" --> "extract_phase"
  "extract_phase" --> "check_phase"
  "check_phase" --> "report_phase"
  "report_phase" --> "final_phase"
}

"final_phase" --> (*)
@enduml
