@startuml
skinparam componentStyle rectangle

package "UVM Testbench" {
    component "DUT" as DUT #lightgrey

    package "UVM Environment" {
        
        package "Input Agent" {
            component "Monitor (In)" as MON_IN
            component "Driver" as DRV
        }

        package "Output Agent" {
            component "Monitor (Out)" as MON_OUT
        }

        component "Predictor" as PRED #yellow
        component "Scoreboard" as SCB #lightgreen
    }
}

' Stimulus Flow
DRV -down-> DUT : Drives
MON_IN -up-> DUT : Samples

' Data Comparison Flow
MON_IN -right-> PRED : Observed Inputs
PRED -right-> SCB : Expected Data
MON_OUT -left-> SCB : Actual Data
MON_OUT -up-> DUT : Samples Outputs

@enduml
